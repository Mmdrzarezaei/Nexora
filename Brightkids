<script>
/* ----- Minimal JS: product handling, modal, redirect to payment ----- */
/* Replace PAYMENT_BASE_URL with your payment link (PayPal/Payoneer/Wed2 checkout) */
const PAYMENT_BASE_URL = "https://example-payment-link.com/checkout?"; // << REPLACE THIS

function openDetails(id){
  const card = document.querySelector('[data-id="'+id+'"]');
  const title = card.dataset.title;
  const price = card.dataset.price;
  const sku = card.dataset.sku;
  document.getElementById('modalTitle').textContent = title + " — $" + price;
  document.getElementById('modalDesc').textContent = card.querySelector('.desc').textContent;
  document.getElementById('overlay').style.display = 'flex';
  document.getElementById('overlay').setAttribute('aria-hidden','false');
  // store selected product
  window.selectedProduct = {id, title, price, sku};
}
function closeOverlay(){
  document.getElementById('overlay').style.display = 'none';
  document.getElementById('overlay').setAttribute('aria-hidden','true');
}
document.querySelectorAll('.buy').forEach(b=>{
  b.addEventListener('click', (e)=>{
    const id = e.currentTarget.getAttribute('data-id');
    if(id) openDetails(id);
  });
});

/* On form submit -> build payment url with product info and redirect */
function handleCheckout(ev){
  ev.preventDefault();
  const p = window.selectedProduct || {};
  const form = ev.target;
  const data = {
    name: form.name.value || document.getElementById('fullName').value,
    email: form.email.value,
    address: form.address.value,
    city: form.city.value,
    zip: form.zip.value,
    qty: form.qty.value,
    sku: p.sku || '',
    product: p.title || ''
  };
  // Build a query string (URL encode)
  const qs = new URLSearchParams(data).toString();
  // Redirect to payment link (replace base with your actual checkout handler)
  const final = PAYMENT_BASE_URL + qs;
  // For debug: open in a new tab
  window.open(final, '_blank');
  // optionally close modal
  closeOverlay();
  return false;
}

/* Minimal search */
document.getElementById('search').addEventListener('input', function(){
  const q = this.value.toLowerCase();
  document.querySelectorAll('.card').forEach(c=>{
    const t = c.dataset.title.toLowerCase();
    if(t.includes(q)) c.style.display = '';
    else c.style.display = 'none';
  });
});
</script>

